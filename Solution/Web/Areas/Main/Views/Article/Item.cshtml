@model QinJilu.Web.Areas.Main.Models.NewsInfo
@{
    ViewBag.Title = "文摘";
    var ticks = (DateTime.Now - Model.sourcetime);

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="product" content="qinjilu">
    <meta name="description" content="qinjilu">
    <meta name="author" content="lcskey@qq.com">
    <meta name="keywords" content="qinjilu">


    <link href="~/Content/metro-ui/css/metro-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/metro-ui/css/metro-bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/metro-ui/css/iconFont.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/metro-ui/jquery.ui.widget.js"></script>
    <script src="~/Scripts/metro-ui/metro.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <title>@ViewBag.Title</title>

</head>
<body class="metro">

    <div class="container">

        <div class="padding5">
            <b>@Model.site </b>
            

            @if (ticks.TotalDays > 1)
            {
                <b>@ticks.Days</b><span>天前</span>
            }
            else if (ticks.TotalHours > 1)
            {
                <b>@ticks.Hours</b><span>小时前</span>
            }
            else if (ticks.TotalMinutes > 1)
            {
                <b>@ticks.Minutes</b><span>分钟前</span>
            }
            else if (ticks.TotalSeconds > 1)
            {
                <b>@ticks.Seconds</b><span>秒前</span>
            }
            发布
        </div>

        <h3>@Model.title</h3>


            <hr />@Html.Raw(Model.content.Replace("img src='", "img src='/Main/Article/Img/"))

            <hr />
            @Model.tag



        <p>
            <a href="javascript:history.go(-1)">返回</a>
        </p>
    </div>
</body>
</html>
