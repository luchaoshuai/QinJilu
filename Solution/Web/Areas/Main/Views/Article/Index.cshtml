    <title>@ViewBag.Title</title>

    <style type="text/css">
        .alist {
            margin: 5px 0 5px 0;
        }

            .alist .thub {
                width: 64px;
                height: 64px;
                float: left;
            }


            .alist .data {
                overflow: hidden;
            }

            .alist b {
                font-size: 14px;
                line-height: 16px;
                max-height: 32px;
                display: block;
                overflow: hidden;
            }

            .alist i {
                margin-top: 2px;
                font-size: 12px;
                line-height: 14px;
                max-height: 28px;
                display: block;
            }


            .alist .time {
                clear: left;
                margin-top: 4px;
                text-align: right;
            }
    </style>
