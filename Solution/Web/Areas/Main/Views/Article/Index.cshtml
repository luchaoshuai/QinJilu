<body class="metro">

    <div class="container">



        <nav class="horizontal-menu">
            <ul>
                <li>
                    <a class="dropdown-toggle" href="#">兴趣点</a>
                    <ul class="dropdown-menu" data-role="dropdown">
                        <li><a href="/Main/Article/Index/period">月经，例假，大姨妈</a></li>
                        <li><a href="/Main/Article/Index/baby">育儿，怀孕，产后</a></li>
                        <li><a href="/Main/Article/Index/beauty">美妆，美体，美肤</a></li>
                    </ul>
                </li>
                <li><a href="/Weixin/Friend/Index">去闺蜜圈</a></li>
            </ul>
        </nav>

        <hr />

        @foreach (var item in Model)
        {
            var ticks = (DateTime.Now - item.sourcetime);

            <a href="/Main/Article/Item/@item.Id" class="alist">
                @if (!string.IsNullOrEmpty(item.img))
                {
                    <img src="/Main/Article/Img/@item.img" class="thub">
                }
                <div class="data">
                    <b>@item.title</b>
                    <i>@item.abs</i>
                </div>
                <div class="time">
                    @if (ticks.TotalDays > 1)
                    {
                        <b>@ticks.Days</b><span>天前</span>
                    }
                    else if (ticks.TotalHours > 1)
                    {
                        <b>@ticks.Hours</b><span>小时前</span>
                    }
                    else if (ticks.TotalMinutes > 1)
                    {
                        <b>@ticks.Minutes</b><span>分钟前</span>
                    }
                    else if (ticks.TotalSeconds > 1)
                    {
                        <b>@ticks.Seconds</b><span>秒前</span>
                    }
                </div>
            </a>
            <hr />
        }

